<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_login"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with Back Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Settings"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <!-- Profile Avatar Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_card"
            android:elevation="4dp"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <!-- Avatar Circle -->
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/user"
                    android:contentDescription="User Image"
                    android:scaleType="centerInside"
                    android:background="@drawable/bg_avatar"
                    android:elevation="2dp"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/tvInitials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EV"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"/>

                <!-- Edit Badge -->
                <View
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_button_primary"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:elevation="4dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_edit"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="5dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EV Owner"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvProfileNic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIC: 123456789V"
                android:textSize="14sp"
                android:textColor="@color/gray_600"/>
        </LinearLayout>

        <!-- Profile Information Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="8dp"
            android:padding="24dp"
            android:layout_marginBottom="16dp">

            <!-- Section Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERSONAL INFORMATION"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary_green"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp"/>

            <!-- Full Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_marginBottom="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/edit_text_selector"
                    android:hint="Enter your full name"
                    android:textColorHint="@color/gray_600"
                    android:textColor="@color/gray_900"
                    android:textSize="16sp"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLines="1"
                    android:paddingStart="48dp"
                    android:paddingEnd="16dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"/>
            </RelativeLayout>

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_marginBottom="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/edit_text_selector"
                    android:hint="your.email@example.com"
                    android:textColorHint="@color/gray_600"
                    android:textColor="@color/gray_900"
                    android:textSize="16sp"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="48dp"
                    android:paddingEnd="16dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_email"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"/>
            </RelativeLayout>

            <!-- Phone -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_marginBottom="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/edit_text_selector"
                    android:hint="+94 71 234 5678"
                    android:textColorHint="@color/gray_600"
                    android:textColor="@color/gray_900"
                    android:textSize="16sp"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:paddingStart="48dp"
                    android:paddingEnd="16dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_phone"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"/>
            </RelativeLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e7eb"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- Security Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHANGE PASSWORD"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary_green"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp"/>

            <!-- New Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Password (Optional)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/gray_800"
                android:layout_marginBottom="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/edit_text_selector"
                    android:hint="Leave blank to keep current password"
                    android:textColorHint="@color/gray_600"
                    android:textColor="@color/gray_900"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="48dp"
                    android:paddingEnd="16dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lock"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"/>
            </RelativeLayout>

            <!-- Update Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Update Profile"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_primary_selector"
                android:elevation="2dp"
                android:stateListAnimator="@null"/>

        </LinearLayout>

        <!-- Danger Zone Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="8dp"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <!-- Section Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DANGER ZONE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#dc2626"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp"/>

            <!-- Warning Info Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_info_card"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_warning"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Deactivating your account will disable access. Only a back-office officer can reactivate it."
                    android:textSize="13sp"
                    android:textColor="#92400e"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

            <!-- Deactivate Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDeactivate"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Deactivate Account"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_danger_selector"
                android:elevation="2dp"
                android:stateListAnimator="@null"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>