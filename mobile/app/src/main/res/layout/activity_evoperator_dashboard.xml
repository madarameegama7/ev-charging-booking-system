<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_gradient_primary"
            android:padding="24dp">

            <!-- Top Bar with Logout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:alpha="0.9"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Station Operator"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/bg_circle_white_alpha"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:contentDescription="Profile"/>
            </LinearLayout>

            <!-- Quick Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:spacing="12dp">

                <!-- Pending Reservations Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_semi_transparent"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:alpha="0.85"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvPendingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- Active Sessions Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_semi_transparent"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:alpha="0.85"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvActiveCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <!-- Completed Today Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_semi_transparent"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:alpha="0.85"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvCompletedCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Main Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:spacing="16dp">

            <!-- Primary Action - QR Code Scanner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:elevation="2dp"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/qrcode"
                        android:scaleType="centerInside"
                        android:contentDescription="QR Code"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/primary_green"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Charge Session"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan EV owner's QR code to start a charging session"
                    android:textSize="13sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="16dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnScanQR"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Open QR Scanner"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/button_primary_selector"
                    android:elevation="0dp"
                    android:stateListAnimator="@null"/>
            </LinearLayout>

            <!-- Quick Actions Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:spacing="12dp">

                <!-- View Reservations -->
                <LinearLayout
                    android:id="@+id/cardViewReservations"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:elevation="2dp"
                    android:padding="16dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/reservation"
                        android:scaleType="centerInside"
                        app:tint="@color/primary_green"
                        android:contentDescription="Reservations"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reservations"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"
                        android:gravity="center"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage bookings"
                        android:textSize="11sp"
                        android:textColor="@color/gray_600"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Station Status -->
                <LinearLayout
                    android:id="@+id/cardStationStatus"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:elevation="2dp"
                    android:padding="16dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/station"
                        android:scaleType="centerInside"
                        app:tint="@color/primary_green"
                        android:contentDescription="Station"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Station Status"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"
                        android:gravity="center"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chargers and ports"
                        android:textSize="11sp"
                        android:textColor="@color/gray_600"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Current Active Sessions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:elevation="2dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Charging Sessions"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"/>

                    <TextView
                        android:id="@+id/tvSessionCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 sessions"
                        android:textSize="12sp"
                        android:textColor="@color/primary_green"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Sessions List -->
                <LinearLayout
                    android:id="@+id/containerSessions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <!-- Empty State -->
                <TextView
                    android:id="@+id/tvNoSessions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No active charging sessions"
                    android:textSize="14sp"
                    android:textColor="@color/gray_500"
                    android:gravity="center"
                    android:padding="24dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Recent Transactions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:elevation="2dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction History"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"/>

                    <TextView
                        android:id="@+id/tvViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textSize="12sp"
                        android:textColor="@color/primary_green"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerTransactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Navigation/Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:spacing="12dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Logout"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_logout_selector"
                android:elevation="0dp"
                android:stateListAnimator="@null"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>