<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addReservationLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddReservationActivity">

    <TextView
        android:id="@+id/tvAddReservationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Reservation"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etStationID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Station ID"
        app:layout_constraintTop_toBottomOf="@id/tvAddReservationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/etDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Date and Time (yyyy-MM-dd HH:mm)"
        app:layout_constraintTop_toBottomOf="@id/etStationID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnConfirmReservation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirm Reservation"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etDateTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
